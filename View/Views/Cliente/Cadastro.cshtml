
@{
    ViewBag.Title = "Cadastro";
}

<h3>Cadastro de Cliente</h3>

<form action="@Url.Action("Store")" method="POST">

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input class="form-control" type="text" name="nome" id="campo-nome" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-cpf">CPF</label>
                <input type="text" name="cpf" id="campo-cpf" class="form-control"/>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button class="btn btn-success" type="submit"><i class="fas fa-save"></i>Salvar</button>
        </div>
    </div>
</form>