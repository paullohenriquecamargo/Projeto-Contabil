
@{
                /**/

                ViewBag.Title = "Index";
}

<h3 class="text-center">Lista de Cliente</h3>
<div class="row">
    <div class="col-10 offset-1 mb-3">
        <a class="btn btn-primary float-right"
           href="@Url.Action("Cadastro")"><i class="fade fa-plus"></i>Novo Cliente</a>
    </div>
</div>

<div class="row">
    <div class="col-10 offset-1">
        <table class="table table-striped" table-bordered>
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Cliente cliente in ViewBag.Clientes)
                {
                    <tr>
                        <td>@cliente.Id</td>
                        <td>@cliente.Nome</td>
                        <td>
                            <a href="@Url.Action("Editar", new { Id = cliente.Id})"
                               class="btn btn-primary"><i class="glyphicon-fast-backward fas-pen"></i>Editar</a>
                            <a href="@Url.Action("Apagar", new { Id = cliente.Id })"
                               class="btn btn-danger"><i class="fas fas-trash"></i>Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>