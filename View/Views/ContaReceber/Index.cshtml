
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center">Lista de Contas a Receber</h3>
<div class="row">
    <div class="col-lg-10 col-lg-offset-1 mb-3">
        <a class="btn btn-primary float-rigth" href="@Url.Action("Cadastro")"><i class="fa fa-plus"></i> Novo Registro</a>
    </div>
</div>


<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <td>Código</td>
            <td>Nome</td>
            <td>Ação</td>
        </tr>
    </thead>

    <tbody>
        @foreach (Model.ContaReceber contaReceber in ViewBag.ContasReceber)
        {
            <tr>
                <td>@contaReceber.Id</td>
                <td>@contaReceber.Nome</td>
                <td>
                    <a href="@Url.Action("Editar", new { id = contaReceber.Id  })" class="btn btn-primary">content</a>

                    <a href="@Url.Action("Apagar", new { id = contaReceber.Id })" class="btn btn-danger">content</a>
                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>

